{
  "dashboard": {
    "title": "netmeta Network Intelligence Dashboard",
    "tags": ["netmeta", "bgp", "ospf", "mpls"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "BGP Peer Up/Down",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "bgp_peer_up",
            "legendFormat": "{{peer}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "BGP Prefix Count per Peer",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "bgp_prefix_count",
            "legendFormat": "{{peer}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "BGP Session Flaps",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(bgp_session_flaps_total[5m])",
            "legendFormat": "{{peer}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Remediation Events",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(netmeta_remediation_total[5m])",
            "legendFormat": "{{reason}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "MPLS Corruption Events",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "mpls_corruption_events_total",
            "legendFormat": "Corruption Events"
          }
        ]
      }
    ]
  }
}

